<style nonce="<%= locals.nonce %>">
    @font-face {
        font-family: "icon";
        font-weight: 400;
        src: url("/static/fonts/icons/outlined.woff2") format('woff2');
    }
    @font-face {
        font-family: "din";
        src: url("/static/fonts/dincondensedbold.ttf");
    }
    
    body{
        background: rgb(230, 120, 170);
    }

    span.esc{
        position: absolute;
        top: 1vw;
        left: 1vw;
        width: 3.5vw;
        height: 3.5vw;
        line-height: 3.5vw;
        text-align: center;
        font-size: 1.5vw;
        border-radius: 0.1vw;
        background: black;
        color: white;
        text-align: center;
        font-family: "din";
        box-shadow: 0 0 0.5vw 0 white;
    }

    div.loading{
        position: absolute;
        display: block;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        background-image: url(/static/textures/yellowedpaper.png);
        background-size: cover;
        background-position: center;
        width: 40vw;
        border-radius: 1vw;
        aspect-ratio: 3 / 2;
    }

    div.settings{
        position: absolute;
        display: block;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        height: 86vh;
        border-radius: 0.5vw;
        aspect-ratio: 4 / 3;
        pointer-events: none;
        border: none;
        overflow: hidden;
    }

    iframe.rick{
        position: absolute;
        display: block;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        height: 120vh;
        aspect-ratio: 4 / 3;
    }

    cover{
        position: absolute;
        left: 0;
        top: 0;
        width: 100vw;
        height: 100vh;
        pointer-events: none;
    }

    cover[active="1"]{
        pointer-events: all;
    }

    accent{
        background: rgb(240, 220, 240);
        position: absolute;
        top: 10vh;
        left: 0;
        height: 30vh;
        width: 100vw;
    }

    content{
        position: absolute;
        top: 3vw;
        right: 3vw;
        height: calc(100vh - 6vw);
        width: 42vw;
        background-image: url(/static/avatars/trump.jpg);
        background-position: center;
        background-size: cover;
    }

    menu {
        position: absolute;
        width: 45vw;
        left: 5vw;
        top: 50%;
        transform: translateY(-50%);
    }

    menu img{
        position: relative;
        display: block;
        width: 100%;
    }

    menu options {
        position: relative;
        top: 2vw;
        left: 8vw;
    }

    menu options p {
        cursor: pointer;
        user-select: none;
        position: relative;
        display: block;
        font-family: "din";
        font-size: 4vw;
        line-height: 4vw;
        color: black;
        left: 0;
        transition: 0.1s;
        margin-bottom: 0.5vw;
    }

    menu options p[selected="1"] {
        color: white;
        left: -3vw;
    }

    menu options p span {
        position: absolute;
        left: -1.5vw;
        top: 40%;
        transform: translate(-100%, -50%);
        background: black;
        border-radius: 0.1vw;
        color: white;
        box-shadow: 0 0 0.5vw 0 white;
        width: 3.5vw;
        height: 3.5vw;
        line-height: 3.5vw;
        text-align: center;
        font-size: 2.75vw;
        font-weight: 900;
        opacity: 0;
        font-family: "icon";
        font-feature-settings: "liga";
        -webkit-font-feature-settings: "liga";
        -webkit-font-smoothing: antialiased;
    }

    menu options p[selected="1"] span {
        opacity: 1;
    }
</style>