<style>
    @font-face {
        font-family: "din";
        src: url("/static/fonts/dincondensedbold.ttf");
    }

    body{
        background: rgb(255,240,220);
        font-family: "din";
    }

    h1{
        font-size: 60px;
    }

    h2{
        font-size: 35px;
    }

    h3{
        font-size: 30px;
    }

    hr{
        border: solid 2px rgb(211, 192, 172);
        border-radius: 2px;
        margin: 20px;
        margin-left: 0px;
    }

    button{
        background: rgb(240, 220, 200);
        border: solid 1px rgb(207, 196, 175);
        border-radius: 12px;
        padding: 15px;
        min-width: 250px;
        font-family: "din";
        font-size: 20px;
    }

    label{
        font-size: 25px;
        display: block;
        margin-bottom: 5px;
        margin-top: 10px;
    }

    input[type="number"]{
        background: rgb(255,245,235);
        border: rgb(207, 196, 175) solid 1px;
        border-radius: 12px;
        width: calc(100vw - 20vh - 190px);
        margin-left: 25px;
        font-family: "din";
        padding: 10px;
        font-size: 23px;
    }

    input[type="range"]{
        overflow: hidden;
        -webkit-appearance: none;
        appearance: none;
        max-width: 500px;
        width: calc(100vw - 20vh - 46px);
        margin-left: 25px;
        height: 20px;
        background: rgb(240, 220, 200);
        border: solid 1px rgb(207, 196, 175);
        border-radius: 5px;
        opacity: 0.7;
        -webkit-transition: .1s;
        transition: opacity .1s;
    }

    input[type="range"]:hover{
        opacity: 1;
    }

    input[type="range"]::-webkit-slider-thumb {
        -webkit-appearance: none;
        appearance: none;
        width: 22px;
        height: 22px;
        border-radius: 5px;
        background: rgb(207, 196, 175);
        cursor: pointer;
        box-shadow: -505px 0 0 500px rgb(225, 210, 188);
    }

    input[type="range"]::-moz-range-thumb {
        width: 22px;
        height: 22px;
        border-radius: 5px;
        background: rgb(207, 196, 175);
        cursor: pointer;
    }

    button.set{
        font-size: 18px;
        min-width: 100px;
        margin-left: 15px;
        margin-bottom: 15px;
    }

    page{
        position: absolute;
        top: 0;
        left: 0;
        height: 80vh;
        width: calc(100vw - 20vh);
        pointer-events: none;
        opacity: 0;
        padding: 10vh;
        overflow: hidden;
    }

    page[active="1"]{
        pointer-events: all;
        opacity: 1;
        overflow: visible;
    }

    cover{
        background: rgb(255,240,220);
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
    }

    page:has(cover[active="1"]){
        overflow: hidden;
    }

    div#debateContainer:not(:has(div#debatewith button)){
        display: none;
    }

    div#debatewith button{
        margin-top: 10px;
    }

    div#debatewith{
        margin-bottom: 20px;
    }
</style>