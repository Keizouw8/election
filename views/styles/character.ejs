<style nonce="<%= locals.nonce %>">
    character{
        aspect-ratio: 1 / 2;
        background: gray;
        display: block;
        position: relative;
        --primary: #D41D0F;
        --secondary: #010001;
        --skin: rgb(240, 189, 182);
    }

    character origin{
        position: absolute;
        aspect-ratio: 1;
        height: 15%;
        left: 50%;
        bottom: 30%;
        transform-origin: 50% 50%;
        transform: translateX(-50%) rotateZ(0);
    }

    character origin waist{
        position: absolute; 
        width: 100%;
        height: 50%;
        top: 50%; 
        left: 50%;
        transform-origin: 50% 0%;
        transform: translateX(-50%) rotateZ(0deg);
        bottom: 0;
    }

    character origin waist background{
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background: var(--secondary);
        mask-image: url(/static/masks/waist.svg);
        mask-position: center;
        mask-mode: alpha;
        mask-size: cover;
    }

    character origin torso{
        position: absolute;
        width: 100%;
        height: 200%;
        bottom: 50%;
        left: 50%;
        transform-origin: 50% 75%;
        transform: translateX(-50%) rotateZ(45deg);
        bottom: 0;
        overflow: visible;
    }

    character origin torso background{
        position: absolute; 
        width: 100%;
        height: 100%;
        top: 0;
        right: 0;
        background: var(--primary);
        mask-image: url(/static/masks/body.svg);
        mask-position: center;
        mask-mode: alpha;
        mask-size: cover;
    }
</style>