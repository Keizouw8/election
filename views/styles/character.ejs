<style nonce="<%= locals.nonce %>">
    character{
        aspect-ratio: 1 / 2;
        background: gray;
        display: block;
        position: relative;
        --primary: #D41D0F;
        --secondary: #010001;
        --skin: rgb(240, 189, 182);
    }

    character origin{
        position: absolute;
        aspect-ratio: 1;
        height: 15%;
        left: 50%;
        bottom: 30%;
        transform-origin: 50% 50%;
        transform: translateX(-50%) rotateZ(0);
    }

    character origin waist{
        position: absolute; 
        width: 100%;
        height: 100%;
        top: 0; 
        left: 0;
        transform-origin: 50% 50%;
        transform: rotateZ(0deg);
        background: var(--secondary);
        border-radius: 50%;
        border: none;
    }

    character origin waist thigh{
        position: absolute; 
        width: 45%;
        aspect-ratio: 36 / 116;
        top: 10%;
        transform-origin: 50% calc(100% * 18 / 122);
        transform: translateY(calc(-100% * -18 / 110)) rotateZ(-1deg);
        background: var(--secondary);
        -webkit-mask-image: url(/static/masks/thigh.svg);
        -webkit-mask-position: center;
        -webkit-mask-size: cover;
        mask-image: url(/static/masks/thigh.svg);
        mask-position: center;
        mask-size: cover;
    }

    character origin waist thigh.left{
        left: 2%;
        transform: translateY(calc(-100% * -18 / 110)) rotateZ(-1deg);
    }

    character origin waist thigh.right{
        right: 2%;
        transform: translateY(calc(-100% * -18 / 110)) rotateZ(1deg);
    }

    character origin torso{
        position: absolute;
        width: 100%;
        height: 135%;
        bottom: 50%;
        left: 50%;
        transform-origin: 50% 100%;
        transform: translateX(-50%) rotateZ(0deg); 
        overflow: visible;
    }

    character origin torso background{
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        right: 0;
        background: var(--primary);
        -webkit-mask-image: url(/static/masks/body.svg);
        -webkit-mask-position: bottom;
        -webkit-mask-size: cover;
        mask-image: url(/static/masks/body.svg);
        mask-position: bottom;
        mask-size: cover;
    }

    character origin torso face{
        position: absolute;
        aspect-ratio: 162 / 201;
        width: 195%;
        top: 20%;
        left: 50%;
        transform-origin: 50% 100%;
        transform: translate(-50%, -100%) rotateZ(0deg);
        background-image: url(/static/avatars/powell.png);
        background-position: center;
        background-size: cover;
        -webkit-mask-image: url(/static/masks/face.svg);
        -webkit-mask-position: center;
        -webkit-mask-size: 100% 100%;
        mask-image: url(/static/masks/face.svg);
        mask-position: center;
        mask-size: 100% 100%;
    }
</style>